  VITE_STRICT_ALLOWED_HOSTS=true
  VITE_ALLOWED_HOSTS=localhost,127.0.0.1,Greg-Burch,greg-burch,greg-burch,gmac,GMAC
  EOF

  cleanup() {
    if [[ -n "" ]]; then
      mv "" "frontend/.env.local"
    else
      rm -f "frontend/.env.local"
    fi
  }
  trap cleanup EXIT INT TERM

  npm run dev:network 2>&1 | awk '
    BEGIN { printed = 0 }
    /Local:/ && !printed {
      line = bash
      sub(/.*Local:[[:space:]]*/, "", line)
      print "Server: " line
      fflush()
      printed = 1
    }
  '
